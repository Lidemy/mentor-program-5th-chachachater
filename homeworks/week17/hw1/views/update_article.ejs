<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('template/head.ejs') %>
  </head>
  <body>
    <%- include('template/navbar.ejs') %>
    <%- include('template/banner.ejs') %>
    <div class="container">
      <form class="article-content" action="./update_article/<%= article.id %>" method="POST">
        <h1>編輯文章：</h1>
        <input type="text" id="title" name="title" value="<%= article.title %>">
        <input type="text"  name="id" value="<%= article.id %>" style="display: none;">
        <select class="category" name="category_id">
          <option value="">請選擇文章分類</option>
            <% categoryArr.forEach( each => { %>
              <option 
                value=<%= each.id %>
                <% if(article.category_id == each.id) { %>
                  <%= selected="selected" %>
                <% } %>
                >
                <%= each.category %>
              </option>
            <% }) %>
        <select>
        <textarea rows="5" cols="75" id="content" name="content"><%= article.content %></textarea>
        <p style="text-align: center; color: #d80000;">
        <%= errMessage %>
        </p>
        <input type="submit" value="送出文章">
      </form>
    </div>


    <footer>Copyright © 2020 Who's Blog All Rights Reserved.</footer>

    <script src="./javaScript.js"></script>
  </body>
</html>
